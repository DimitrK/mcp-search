{
  "name": "@dimitrk/mcp-search",
  "version": "0.1.6",
  "description": "MCP server for web search and semantic page content retrieval with local caching",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.11.0"
  },
  "bin": {
    "@dimitrk/mcp-search": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/server.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "node build.mjs",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:watch": "npm run build:js && npm run build:types -- --watch",
    "dev": "tsx src/cli.ts server",
    "debug": "npm run build && npx @modelcontextprotocol/inspector -e DATA_DIR=.mcp-search-dev -e SIMILARITY_THRESHOLD=0.6 -e EMBEDDING_TOKENS_SIZE=1024 -e REQUEST_TIMEOUT_MS=20000 -e CONCURRENCY=2 -e VECTOR_DB_MODE=thread -e VECTOR_DB_RESTART_ON_CRASH=true -e GOOGLE_API_KEY=mock -e GOOGLE_SEARCH_ENGINE_ID=mock -e EMBEDDING_SERVER_URL=http://127.0.0.1:2020 -e EMBEDDING_SERVER_API_KEY=mock -e EMBEDDING_MODEL_NAME=text-embedding-qwen3-embedding-0.6b node dist/cli.js server",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest",
    "test:performance": "jest --testTimeout=30000 --testPathPattern=performance",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "fetch:once": "node scripts/run-fetch-once.mjs",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release:patch": "npm run version:patch && npm run release:create-branch",
    "release:minor": "npm run version:minor && npm run release:create-branch",
    "release:major": "npm run version:major && npm run release:create-branch",
    "release:create-branch": "node scripts/release.mjs",
    "release:push": "node scripts/push-release.mjs",
    "release:cleanup": "node scripts/cleanup-release.mjs",
    "db:inspect": "node -r dotenv/config dist/cli.js inspect",
    "mcp:debug": "node -r dotenv/config dist/cli.js server",
    "dev:with-inspector": "concurrently 'npm run build:watch' 'npm run mcp:debug'",
    "health": "node -r dotenv/config dist/cli.js health",
    "health:verbose": "node -r dotenv/config dist/cli.js health --verbose",
    "cleanup": "node -r dotenv/config dist/cli.js cleanup",
    "start": "npx @modelcontextprotocol/inspector node -r dotenv/config dist/cli.js server"
  },
  "keywords": [
    "mcp",
    "search",
    "web-scraping",
    "embeddings",
    "semantic-search",
    "duckdb",
    "vector-search"
  ],
  "author": "DimitrK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dimitrk/mcp-search.git"
  },
  "bugs": {
    "url": "https://github.com/dimitrk/mcp-search/issues"
  },
  "homepage": "https://github.com/dimitrk/mcp-search#readme",
  "dependencies": {
    "@duckdb/node-api": "1.4.0-r.1",
    "@modelcontextprotocol/sdk": "latest",
    "@mozilla/readability": "0.6.0",
    "@types/turndown": "5.0.5",
    "cheerio": "1.1.2",
    "env-paths": "3.0.0",
    "jsdom": "27.0.0",
    "pino": "8.19.0",
    "rate-limiter-flexible": "5.0.0",
    "turndown": "7.2.1",
    "undici": "6.21.3",
    "zod": "3.24.1",
    "zod-to-json-schema": "3.24.6"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-typescript": "7.27.1",
    "concurrently": "8.2.2",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.36.0",
    "@types/jest": "29.5.11",
    "@types/jsdom": "21.1.6",
    "@types/node": "20.19.17",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "babel-plugin-transform-import-meta": "2.3.3",
    "dotenv": "17.2.2",
    "esbuild": "0.25.10",
    "eslint": "9.36.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "glob": "10.4.1",
    "jest": "29.7.0",
    "nock": "13.5.1",
    "openai": "5.22.0",
    "pino-pretty": "11.3.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.2",
    "tsx": "4.20.5",
    "typescript": "5.3.3",
    "typescript-eslint": "8.44.0"
  },
  "peerDependencies": {
    "playwright": "1.55.1"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    }
  }
}
